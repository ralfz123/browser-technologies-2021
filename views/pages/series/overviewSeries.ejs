<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('../../partials/head') %>
  <title>Series | iPic</title>
</head>
<body>
  <%- include ('../../partials/header') %>

  <main>
    <section id="series-overview">
      <h1>All series</h1>

      <ol>
        <% if(series.length > 0){ %> 
          <% series.forEach(({_id, titleSerie, images}) => {%>
            <li>
              <a href="/series/detail/<%= _id%>">
                <figure>
                  <figcaption><%= titleSerie%></figcaption>
                  <img
                    src="/uploads/<%= images[0]%>"
                    alt="<%= titleSerie%>"
                  />
                </figure>
              </a>
            </li>    
                <% }) %> 
                <% }else{ %>
        <p>No series yet 🙁</p>
        <% }%>
      </ol>

      <a class="link" href="/series/new">New serie</a>
    </section>
  </main>

  <%- include ('../../partials/footer') %>
</body>
