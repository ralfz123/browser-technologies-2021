<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('../../partials/head') %>
  <title>Photos | iPic</title>
</head>
<body>
  <%- include ('../../partials/header') %>

  <main>
    <section id="photos-overview">
      <h1 class="hide">All photos</h1>
      <ul>
        <% if(images.length > 0){ %> <% images.forEach(({image, title, description,
        photographer, location, _id}) => { %>
        <li>
          <a href="/photos/<%=_id%>">
            <figure>
              <img src="uploads/<%=image%>" alt="<%=description%>" />
              <figcaption><%= title %></figcaption>
            </figure>
          </a>
        </li>
        <% }) %> <% }else{ %>
        <p>No photos yet üôÅ</p>
        <% }%>
      </ul>
      <a class="link" href="/upload">Add photo</a>
    </section>
  </main>

  <%- include ('../../partials/footer') %>
</body>
