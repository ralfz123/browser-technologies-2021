</head>
<body>
  <%- include ('../../partials/header') %>

  <main>
    <section>
      <h1>All series</h1>
      <a href="/photos">Back</a>

      <% if(seriesArray.length > 0){ %> <% seriesArray.forEach(({selectedPhotos, titleSerie,
      idSerie}) => { %>

      <a href="/series/detail/<%- idSerie%>">
