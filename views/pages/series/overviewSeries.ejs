<head>
  <%- include ('../../partials/head') %>
  <title>Series #1 | iPic</title>
</head>
<body>
  <%- include ('../../partials/header') %>

  <main>
    <section>
      <h1>All series</h1>
      <a href="/photos">Back</a>

      <ol>
        <% if(data.length > 0){ %> <% data.forEach(({_id, titleSerie, images}) => {
        %>
        <li>
          <a href="/series/detail/<%= _id%>">
            <figure>
              <img
                src="/uploads/<%=images%>"
                alt="<%=titleSerie%>"
                width="300"
              />
              <figcaption><%= titleSerie %></figcaption>
            </figure>
          </a>
        </li>
        <% }) %> <% }else{ %>
        <p>No series yet 🙁</p>
        <% }%>
      </ol>

      <a href="/series/new">Create serie</a>
    </section>
  </main>

  <%- include ('../../partials/footer') %>
</body>
