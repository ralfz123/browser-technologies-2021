<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../../partials/head') %>
    <title>Series | iPic</title>
  </head>
  <body>
    <%- include ('../../partials/header') %>

    <main>
      <section id="series-overview">
        <h1 class="hide">All series</h1>

        <% if(series.length > 0){ %>
           <% series.forEach((serie) => {%>
        <article>
          <a href="/series/detail/<%= serie._id%>">
            <h2><%= serie.titleSerie%></h2>
            <figure>
              <img
                src="/uploads/<%= images.image%>"
                alt="<%= serie.titleSerie%>"
                width="300"
              />
            </figure>
          </a>
        </article>
        <% }) %> <% }else{ %>
        <p>No series yet 🙁</p>
        <% }%>

        <a class="link" href="/series/new">New serie</a>
      </section>
    </main>

    <%- include ('../../partials/footer') %>
  </body>
</html>
