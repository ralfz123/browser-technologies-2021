<head>
  <%- include ('../../partials/head') %>
  <title>Photos | iPic</title>
</head>
<body>
  <%- include ('../../partials/header') %>
  <main>
    <section>
      <a href="/photos">Back</a>
      <form action="/photoDelete" method="POST">
        <fieldset>
          <legend>Info photo</legend>
          <figure>
            <img
              src="/uploads/<%= image.image%>"
              alt="<%=image.title%>"
              width="300"
            />
          </figure>
          <h2><%= image.title%></h2>
          
          <input type="text" value="<%= image.description%>">
          <p>Description: <%= image.description%></p>
          <p>Photographer: <%= image.photographer%></p>
          <p>Location: <%= image.location%></p>

          <button type="button">Delete</button>
          <button type="button">Edit</button>
        </fieldset>
      </form>
    </section>
  </main>

  <%- include ('../../partials/footer') %>
</body>
